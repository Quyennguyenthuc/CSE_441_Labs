<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="CACULATOR"
                android:textColor="@color/design_default_color_secondary"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="106dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Nhập a"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt1"
            android:layout_width="230dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="106dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Nhập b"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt2"
            android:layout_width="230dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="106dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:text="Kết quả"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edt3"
            android:layout_width="230dp"
            android:layout_height="105dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btntong"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:text="Tổng"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/btnhieu"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:text="Hiệu"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/btntich"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:text="Tích"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

        <Button
            android:id="@+id/btnthuong"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/material_dynamic_neutral80"
            android:text="Thương"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow" />
    </LinearLayout>

</LinearLayout>